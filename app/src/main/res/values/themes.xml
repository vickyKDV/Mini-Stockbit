<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyStockBit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:buttonStyle">@style/ButtonPrimary</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Dashboard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="windowNoTitle">true</item>-->
<!--        <item name="windowActionBar">true</item>-->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:buttonStyle">@style/ButtonPrimary</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">58dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">54dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="ButtonTertiary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">54dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="minHeight">45dp</item>
    </style>

    <style name="TextAppearance" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textSize">9sp</item>
    </style>
</resources>